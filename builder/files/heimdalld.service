[Unit]
  Description=heimdalld
  StartLimitIntervalSec=500
  StartLimitBurst=5
[Service]
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=/usr/local/bin
  ExecStart=/usr/local/bin/heimdalld start --home /var/lib/heimdall \
    --chain=mainnet \
    --bridge \
    --rest-server
  Type=simple
  User=root
[Install]
  WantedBy=multi-user.target
